/* pages/search/index.wxss */
page {
    background-color: #dedede;
    padding: 20rpx;
}

.search_row {
    height: 65rpx;
    display: flex;
}

.search_row input {
    flex: 1;
    height: 100%;
    background-color: #fff;
    margin-right: 20rpx;
    padding-left: 30rpx;
}

.search_row button {
    width: 110rpx !important;
    height: 100%;
    font-size: 26rpx;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search_content {
    margin-top: 30rpx;
}

.search_item {
    background-color: #fff;
    font-size: 26rpx;
    padding: 15rpx 10rpx;
    border-bottom: 1rpx solid #ccc;

    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}