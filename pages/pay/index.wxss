/* pages/pay/index.wxss */
Page {
    padding-bottom: 90rpx;
}

.user_info_row {
    display: flex;
    padding: 20rpx;
    color: #000;
}

.user_info_row .user_info {
    flex: 5;
}

.user_info_row .user_phone {
    flex: 3;
    text-align: right;
}

.cart_title {
    padding: 20rpx;
    color: #eb4506;
    font-size: 36rpx;
    border-top: 1rpx solid #eb4506;
    border-bottom: 1rpx solid #eb4506;
}

.cart_item {
    display: flex;
    padding-top: 10rpx;
    border-bottom: 1rpx solid #ccc;
}

.cart_item .cart_img {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cart_item .cart_img img {
    width: 80%;
}

.cart_item .cart_info_wrap {
    flex: 4;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.cart_item .cart_info_wrap .goods_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #666;
}

.goods_price_wrap {
    display: flex;
    justify-content: space-between;
}

.goods_price_wrap .goods_price {
    color: #eb4506;
    font-size: 34rpx;
}

.cart_num_tool {
    display: flex;
}

.cart_num_tool .goods_num {
    width: 55rpx;
    height: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
}

.footer_tool {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    height: 90rpx;
    border-top: 1rpx solid #ccc;
}

.total_price_wrap {
    flex: 4;
    text-align: right;
    padding-right: 15rpx;
}

.total_price_wrap .total_price {
    color: #eb4506;
    font-size: 32rpx;
    font-weight: 600;
}

.order_pay_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #eb4506;
    color: #fff;
    font-size: 32rpx;
}