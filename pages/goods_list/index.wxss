.frist_tab {
    display: flex;
    flex-direction: column;
}

.frist_tab .goods_item {
    display: flex;
}

.frist_tab .goods_img_wrap {
    padding: 10rpx;
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.frist_tab .goods_img_wrap image {
    width: 90%;
}

.frist_tab .goods_info_wrap {
    padding: 10rpx;
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.frist_tab .goods_info_wrap .goods_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.frist_tab .goods_info_wrap .goods_price {
    color: #eb4506;
    font-size: 30rpx;

}